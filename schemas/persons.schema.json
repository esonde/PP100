{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Persons Registry",
  "description": "Canonical registry of persons with minimal immutable fields",
  "type": "object",
  "properties": {
    "person_id": {
      "type": "string",
      "pattern": "^P\\d{6}$",
      "description": "Unique identifier for the person (e.g., P000123)"
    },
    "nome": {
      "type": "string",
      "minLength": 1,
      "description": "First name"
    },
    "cognome": {
      "type": "string", 
      "minLength": 1,
      "description": "Last name"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "maxLength": 60,
      "description": "URL-friendly identifier"
    },
    "dob": {
      "oneOf": [
        {"type": "null"},
        {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"}
      ],
      "description": "Date of birth (YYYY-MM-DD) or null"
    },
    "sex": {
      "oneOf": [
        {"type": "null"},
        {"enum": ["M", "F"]}
      ],
      "description": "Sex (M/F) or null"
    },
    "wikidata_qid": {
      "oneOf": [
        {"type": "null"},
        {"type": "string", "pattern": "^Q\\d+$"}
      ],
      "description": "Wikidata QID or null"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "UTC timestamp when record was created"
    }
  },
  "required": ["person_id", "nome", "cognome", "slug", "created_at"],
  "additionalProperties": false
}
