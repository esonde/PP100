{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person Aliases",
  "description": "Alternative names and aliases for persons",
  "type": "object",
  "properties": {
    "person_id": {
      "type": "string",
      "pattern": "^P\\d{6}$",
      "description": "Reference to persons.person_id"
    },
    "alias": {
      "type": "string",
      "minLength": 1,
      "description": "Alternative name or alias"
    },
    "from": {
      "type": "string",
      "format": "date-time",
      "description": "When this alias became valid"
    },
    "to": {
      "oneOf": [
        {"type": "null"},
        {"type": "string", "format": "date-time"}
      ],
      "description": "When this alias became invalid (null = still valid)"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence score for this alias (0.0-1.0)"
    }
  },
  "required": ["person_id", "alias", "from", "confidence"],
  "additionalProperties": false
}
